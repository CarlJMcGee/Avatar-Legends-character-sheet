<section class="column is-full">
  <!-- stats -->
  <div
    class="box has-background-info-light columns is-centered has-text-centered"
  >
    <div class="column columns is-multiline">
      <h3 class="column is-full is-size-4">Stats</h3>
      <div class="column columns is-full has-text-left">
        <div class="select">
          <select name="creativity" id="creativity">
            <option value="3">3</option>
            <option value="2">2</option>
            <option value="1">1</option>
            <option value="0">0</option>
            <option value="-1">-1</option>
          </select>
        </div>
        <h3 class="column" id="creativit">
          Creativity
          <span id="creat-default"></span>
        </h3>
      </div>
      <div class="column columns is-full has-text-left">
        <div class="select">
          <select name="focus" id="">
            <option value="3">3</option>
            <option value="2">2</option>
            <option value="1">1</option>
            <option value="0">0</option>
            <option value="-1">-1</option>
          </select>
        </div>
        <h3 class="column">Focus</h3>
      </div>
      <div class="column columns is-full has-text-left">
        <div class="select">
          <select name="harmony" id="">
            <option value="3">3</option>
            <option value="2">2</option>
            <option value="1">1</option>
            <option value="0">0</option>
            <option value="-1">-1</option>
          </select>
        </div>
        <h3 class="column">Harmony</h3>
      </div>
      <div class="column columns is-full has-text-left">
        <div class="select">
          <select name="passion" id="">
            <option value="3">3</option>
            <option value="2">2</option>
            <option value="1">1</option>
            <option value="0">0</option>
            <option value="-1">-1</option>
          </select>
        </div>
        <h3 class="column">Passion</h3>
      </div>

      <!-- fatigue -->
      <div class="container">
        <h3>Fatigue</h3>
        <div class="control">
          <input type="checkbox" name="1" id="" class="fatigue-markers mx-3" />
          <input type="checkbox" name="2" id="" class="fatigue-markers mx-3" />
          <input type="checkbox" name="3" id="" class="fatigue-markers mx-3" />
          <input type="checkbox" name="4" id="" class="fatigue-markers mx-3" />
          <input type="checkbox" name="5" id="" class="fatigue-markers mx-3" />
        </div>
      </div>
    </div>

    <!-- balance of principles -->
    <div class="column">
      <h3 class="is-size-4">Balance</h3>
      <br />
      <br />
      <br />
      <h3 class="has-text-left is-size-3" id="principle-1">
        Principle 1
      </h3>
      <div class="columns is-multiline">
        <div class="control column is-full pb-0">
          <input
            type="radio"
            name="balance"
            value="3"
            id="balance3"
            class="mx-3"
          />
          <input
            type="radio"
            name="balance"
            value="2"
            id="balance2"
            class="mx-3"
          />
          <input
            type="radio"
            name="balance"
            value="1"
            id="balance1"
            class="mx-3"
          />
          <input
            type="radio"
            name="balance"
            value="0"
            id="balance0"
            class="mx-3"
          />
          <input
            type="radio"
            name="balance"
            value="-1"
            id="balance-1"
            class="mx-3"
          />
          <input
            type="radio"
            name="balance"
            value="-2"
            id="balance-2"
            class="mx-3"
          />
          <input
            type="radio"
            name="balance"
            value="-3"
            id="balance-3"
            class="mx-3"
          />
        </div>
        <div class="columns column is-gapless py-0">
          <label for="balance3" class="column px-0">3</label>
          <label for="balance2" class="column px-0">2</label>
          <label for="balance1" class="column px-0">1</label>
          <label for="balance0" class="column px-0">0</label>
          <label for="balance-1" class="column px-0">-1</label>
          <label for="balance-2" class="column px-0">-2</label>
          <label for="balance-3" class="column px-0">-3</label>
        </div>
      </div>
      <h3 class="has-text-right is-size-3" id="principle-2">
        Principle 2
      </h3>
    </div>

    <!-- conditions -->
    <div class="column">
      <h3 class="is-size-4">Conditions</h3>
      <br />
      <div class="container columns is-multiline has-text-left pl-6">
        <label for="Afraid" class="checkbox column is-full">
          <input type="checkbox" name="" id="Afraid" class="conditions" />
          <span class="is-size-5">Afraid:</span>
          take -2 to intimidate and call someone out
        </label>
        <label for="Angry" class="checkbox column is-full">
          <input type="checkbox" name="" id="Angry" class="conditions" />
          <span class="is-size-5">Angry:</span>
          take -2 to guide and comfort and assess a situation
        </label>
        <label for="Guilty" class="checkbox column is-full">
          <input type="checkbox" name="" id="Guilty" class="conditions" />
          <span class="is-size-5">Guilty:</span>
          take -2 to push your luck and deny a callout
        </label>
        <label for="Insecure" class="checkbox column is-full">
          <input type="checkbox" name="" id="Insecure" class="conditions" />
          <span class="is-size-5">Insecure:</span>
          take -2 to trick and resist shifting your balance
        </label>
        <label for="Troubled" class="checkbox column is-full">
          <input type="checkbox" name="" id="Troubled" class="conditions" />
          <span class="is-size-5">Troubled:</span>
          take -2 to plead and rely on your skills or training
        </label>
      </div>
    </div>
  </div>
</section>

